(ns materialon.tab
  (:refer-hoplon :exclude [col cell])
  (:require [materialon.core :as core]))

(defelem tabs [attr children]
  (let [attr (core/prepend-class attr "mdl-tabs mdl-js-tabs")
        tabbar (or (:tab-bar attr)  nil)
        panels (or (:panels attr)  nil)
        attr     (if (or (:ripple-effect attr) nil)
                   (core/append-class attr ["mdl-tabs-ripple-effect"])
                   attr)
        attr     (dissoc attr :title :navigation)]
    (div attr children)))
