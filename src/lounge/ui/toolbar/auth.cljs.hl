(ns lounge.ui.toolbar.auth
  (:require [lounge.state :as state]
            [lounge.state.auth :as auth]
            [lounge.ui.drawer.core :as drawer]
            [silicone.paper :as paper]))

(defn auth-toolbar []
  (paper/paper-icon-button :icon "lock-open" :toggle (cell= (:auth-toolbar state/toolbar)) :click #(auth/unauth!)))

(defn unauth-toolbar []
  (drawer/drawer-toggle :icon "lock-outline" :toggle (cell= (:unauth-toolbar state/toolbar))
                        ))

